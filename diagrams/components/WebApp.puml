Container_Boundary(WarmHouseSystem, "WarmHouse система") {
  Container(WebApp, "Web Application", "", "Клиент пользовательского приложения")
  Container(API, "API SaaS приложения", "", "Интерфейс бэкенда приложения")
}

Container(WebApp, "Web Application", "") {
  Component(Auth, "Auth", "Регистрация/Авторизация и аутентификация пользователя")
  Component(UserProfile, "UserProfile", "Управление профилем")
  Component(ModuleRegistration, "ModuleRegistration", "Управление регистрацией устройств в системе")
  Component(SensorMonitoring, "SensorMonitoring", "Наблюдение показателей датчиков")
  Component(ModuleManagement, "ModuleManagement", "Управление настройками модулей")
}

Rel(Auth,API,"JSON/HTTPS")
Rel(UserProfile,API,"JSON/HTTPS")
Rel(ModuleRegistration,API,"JSON/HTTPS")
Rel(SensorMonitoring,API,"JSON/HTTPS;WS")
Rel(ModuleManagement,API,"JSON/HTTPS")
