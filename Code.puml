  +List<Membership> memberships
  +void register()
  +void login()
}

class Membership {
  +String type
  +Date startDate
  +Date endDate
  +void activate()
  +void cancel()
}

class Schedule {
  +Date date
  +String activity
  +void addActivity()
  +void removeActivity()
}

